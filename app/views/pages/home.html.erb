<%= content_for(:title) do %>
  OpenLoge
<% end %>

<%= content_for(:description) do %>
  Services locaux durables
<% end %>

<div id="bg-home">
  <div class="container" id="home_title">
    <div class="row">
      <div class="col-xs-12">
        <h3>RETROUVEZ LES SERVICES DE LA LOGE DE VOTRE QUARTIER</h3>
          <h4>(bricolage, repassage, baby-sitting, petits plats maison, r√©ception de livraisons, dog sitting, etc.)</h4>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <fieldset>
      <%= form_tag loges_path, class: "form-horizontal", method: :get do %>
          <fieldset>
              <div class="col-xs-12 col-sm-6 col-sm-offset-2">
                <input id="user_input_autocomplete_address" name="user_input_autocomplete_address"
                       class="form-control" placeholder="Entrez votre adresse...">
              </div>
              <div class="col-xs-12 col-sm-3">
                <%= submit_tag "Trouvez votre loge !", class: "btn search_button" %>
                <input id="latitude" name="lat" type="hidden" class="form-control">
                <input id="longitude" name="lon" type="hidden" class="form-control">
              </div>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript"
          src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=<%= ENV['GOOGLE_API_KEY'] %>"></script>

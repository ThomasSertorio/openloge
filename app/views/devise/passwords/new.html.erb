<div class='main'>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="card-white-content">
          <div class="text-center">
            <h2><%= t('.forgot_your_password', :default => 'Forgot your password?') %></h2>

            <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
              <%= devise_error_messages! %>

              <div >
                <%= f.email_field :email,placeholder: "Entrez votre adresse email", class: "form-control"  %>
              </div>
              <p>Vous recevrez un email qui vous permettra de r√©initialiser votre mot de passe</p>

              <div><%= f.submit t('.send_me_reset_password_instructions', :default => "Reset password"), class: "buttonReinitializePW" %></div>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


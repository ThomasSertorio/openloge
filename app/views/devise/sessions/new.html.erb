<div class='main'>
  <div class= "bg-visitor" style="background-image: url(<%= image_path("Photo_home.jpg") %>)">
    <div class= "filter-blue"></div>
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-sm-offset-3">
          <div class="card bg-color-white">
            <div class="buttonFacebook">
              <%= render "devise/shared/facebookConnect" %>
            </div>
            <div class="text-center">
              <p>ou</p>
            </div>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <%= f.error_notification %>
                <%= f.input :email, label: false, placeholder: 'Adresse email' %>
                <%= f.input :password, label: false, placeholder: 'Mot de passe' %>

<div class='main'>
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="card-white-content">

        <div class="buttonFacebook">
          <%= render "devise/shared/facebookConnect" %>
        </div>
        <div class="text-center">
          <p>or</p>
        </div>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%= f.error_notification %>
              <%= f.input :email, label: false, placeholder: 'Enter your email' %>
              <%= f.input :password, label: false, placeholder: 'Type your password' %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

              <%= f.button :submit, "Sign in", class: "buttonSignInUp" %>

          <% end %>

          <div class='text-center'>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class:'text text-danger' %><br />
            <%= render 'devise/shared/signInUp' %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

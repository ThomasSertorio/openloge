                <%= f.button :submit, "Se connecter", class: "buttonSignInUp" %>
            <% end %>

            <div class='text-center'>
              <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), class:'text text-danger' %><br/>
              <%= render 'devise/shared/signInUp' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


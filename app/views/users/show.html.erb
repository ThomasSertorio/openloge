<div id="user-show" class='margined-navbar' style="background-image: url(<%= image_path("Photo_home.jpg") %>)">
  <div class="filter-blue"></div>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <div class="card bg-color-transparent">
          <div class="text-center">
            <h2><%= @expert.first_name.capitalize %></h2>
            <div class="field-margined-bottom">
              <div>
                <p><%= image_tag image_path(@expert.first_name.downcase + ".jpg"), class:"img-profile-big" %></p>
              </div>
            <div class="row">
              <div class="col-xs-3">
                <div class="loge-stat right-border text-shadowed">
                  <p class="font-very-small">Dans la loge depuis</p>
                  <p><i class="fa fa-birthday-cake"></i> <%= @expert.created_at.strftime("%Y") %></p>
                </div>
              </div>
              <div class="col-xs-3">
                <div class="loge-stat right-border text-shadowed">
                  <p class="font-very-small">Dans le quartier depuis</p>
                  <p> <i class="fa fa-home"></i> <%= @expert.neighbour_since + (DateTime.now.year - @expert.created_at.year) %> ans</p>
                </div>
              </div>
              <div class="col-xs-3">
                <div class="loge-stat right-border text-shadowed">
                  <p><i class="fa fa-smile-o"></i> <%= @expert.services_done.size %></p>
                  <p class="font-very-small">
                    <% if @expert.services_done.size == 0 %>
                      <%= "Pas encore de service rendu" %>
                    <% elsif @expert.services_done.size == 1 %>
                      <%= "Service rendu" %>
                    <% else %>
                      <%= "Services rendus" %>
                    <% end %>
                  </p>
                </div>
              </div>
              <div class="col-xs-3">
                <div class="loge-stat text-shadowed">
                  <p><i class="fa fa-star"></i> <%= @expert.reco %></p>
                  <p class="font-very-small">
                    <% if @expert.reco == 0 %>
                      <%= "Pas encore recommandé" %>
                    <% elsif @expert.reco == 1 %>
                      <%= "Recommandation" %>
                    <% else %>
                      <%= "Recommandations" %>
                    <% end %>
                    </p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div>
          <ul class="list-unstyled">
            <li>
              <strong>Age : </strong><%= (Date.today.year - @expert.birthday.year) %> ans
            </li>
            <% if @expert.number_of_children != 0 %>
              <li>
                <%= @expert.number_of_children %> enfants
              </li>
            <% else %>
              <% "" %>
            <% end %>
            <li>
              <strong>Occupation / métier : </strong><%= @expert.occupation %>
            </li>
            <li>
              <strong>Commerce préféré dans le quartier : </strong><%= @expert.favorite_shop %>
            </li>
            <li>
              <strong>Description : </strong><%= @expert.personal_description %>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <div class="card bg-color-transparent">
          <h4>Services proposés par <%= @expert.first_name.capitalize %> :</h4>
          <div class="row">
            <div class="col-xs-12">
              <div class="row">
                <div class="col-xs-12 col-sm-11 col-sm-offset-1">
                  <ul class="text-left list-unstyled">
                    <% @user.services.each do |serv| %>
                      <li class="gray-card"><h5><%= serv.title %></h5>
                        <p><%= serv.description %></p>
                        <p>Prix : XX€
                          <% if serv.pricing_nature = "Horaire" %>
                            <%= "par heure" %>
                          <% else %>
                            <% "" %>
                          <% end %>
                        </p>
                        <form action="<%= "/loges/" + @loge.id.to_s + "/bookings/new" %>" method="get" class="form-inline">
                        <input type="hidden" name="service_id" value="<%= serv.id %>">
                        <button type="submit" class=" btn buttonContactExpert center-block">Envoyer une demande</button>
                        </form>
                      </li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
   <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <div class="card bg-color-transparent text-center">
        <div class="row">
          <div class="col-xs-12">
            <div class="row">
              <form class="searchButton"><%= link_to "Retour à la loge", loge_path(@loge) %></form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

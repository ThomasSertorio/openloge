<div id="user-show" style="background-image: url(<%= image_path("Photo_home.jpg") %>)">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <div class="card margined-navbar bg-color-transparent">
          <div class="text-center">
            <h2><%= @expert.first_name.capitalize %></h2>
            <div class="field-margined-bottom">
              <div>
                <p><%= image_tag "userano.png", class:"img-profile" %></p>
                <div id="reco"><i class="fa fa-star"></i> <%= @expert.reco %></div>
                <div id="services_done"><i class="fa fa-book"></i> <%= @expert.services_done.size %></div>
              </div>
            <div class="row">
              <div class="col-xs-3">
                <div class="loge-stat right-border text-shadowed">
                  <p><i class="fa fa-birthday-cake"></i> <%= @expert.created_at.strftime("%Y") %></p>
                  <p class="font-very-small">Dans la loge depuis</p>
                </div>
              </div>
              <div class="col-xs-3">
                <div class="loge-stat right-border text-shadowed">
                  <p> <i class="fa fa-home"></i> <%= @expert.neighbour_since + (DateTime.now.year - @expert.created_at.year) %> ans</p>
                  <p class="font-very-small">Dans le quartier depuis</p>
                </div>
              </div>
              <div class="col-xs-3">
                <div class="loge-stat right-border text-shadowed">
                  <p><i class="fa fa-smile-o"></i> <%= @expert.services_done.size %></p>
                  <p class="font-very-small">
                    <% if @expert.services_done.size == 0 %>
                      <%= "Pas encore de service rendu" %>
                    <% elsif @expert.services_done.size == 1 %>
                      <%= "Service rendu" %>
                    <% else %>
                      <%= "Services rendus" %>
                    <% end %>
                  </p>
                </div>
              </div>
              <div class="col-xs-3">
                <div class="loge-stat text-shadowed">
                  <p><i class="fa fa-star"></i> <%= @expert.reco %></p>
                  <p class="font-very-small">
                    <% if @expert.reco == 0 %>
                      <%= "Pas encore recommandé" %>
                    <% elsif @expert.reco == 1 %>
                      <%= "Recommandation" %>
                    <% else %>
                      <%= "Recommandations" %>
                    <% end %>
                    </p>
                </div>
              </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <div class="card bg-color-transparent">
          <h5>Services proposés par <%= @expert.first_name.capitalize %> :</h5>
          <div class="row">
            <div class="col-xs-12">
              <div class="row">
                <div class="col-xs-12 col-sm-11 col-sm-offset-1">
                  <ul class="text-left list-unstyled">
                    <% @user.services.each do |serv| %>
                      <li class="gray-card"><%= serv.title %>
                        <form action="<%= "/loges/" + @loge.id.to_s + "/bookings/new" %>" method="get" class="form-inline">
                          <input type="hidden" name="service_id" value="<%= serv.id %>">
                          <button type="submit" class=" btn buttonContactExpert center-block">Envoyer une demande</button>
                        </form>
                      </li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="card">
          <%=  image_tag "Logo_Loge_10", id: "logo-loge" %>
          <h1><%= @loge.name %></h1>
        </div>
      </div>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="card">
          <p>Filtres</p>
        </div>
      </div>
    </div>

  </div>
</div>
